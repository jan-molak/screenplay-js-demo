{
  "name": "@serenity-js/rest",
  "version": "0.0.1",
  "description": "Serenity/JS Screenplay classes for dealing with rest based on the axios npm module.",
  "author": "Kenny Baas <kenny.baas@baasie.com> , Jan Molak <jan.molak@smartcodeltd.co.uk>",
  "homepage": "http://serenity-js.org",
  "license": "Apache-2.0",
  "config": {
    "access": "public"
  },
  "main": "lib/index.js",
  "typings": "lib/index.d.ts",
  "keywords": [
    "bdd",
    "tdd",
    "test",
    "testing",
    "serenity"
  ],
  "scripts": {
    "clean": "rimraf lib",
    "lint": "tslint --project=tsconfig.json --config=../../tslint.json --format=prose",
    "test": "nyc --report-dir=../../target/coverage/rest mocha --opts ./mocha.opts 'spec/**/*.spec.*'",
    "package": "tsc --project tsconfig.json",
    "verify": "npm run clean && npm run lint && npm test && npm run package"
  },
  "devDependencies": {
    "@types/axios": "^0.14.0"
  },
  "dependencies": {
    "@serenity-js/core": "^1.5.4",
    "axios": "^0.17.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jan-molak/serenity-js.git"
  },
  "bugs": {
    "url": "https://github.com/jan-molak/serenity-js/issues"
  },
  "engines": {
    "node": ">= 6.9.x",
    "npm": ">= 3"
  },
  "nyc": {
    "include": [
      "src/*.ts",
      "src/**/*.ts"
    ],
    "exclude": [
      "*.js",
      "lib",
      "spec",
      "staging",
      "node_modules"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "json",
      "text-summary"
    ],
    "cache": true,
    "all": true
  }
}
